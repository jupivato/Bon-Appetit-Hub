{
  "compilerOptions": {
    "target": "ES2020",         
    "module": "commonjs",        
    "outDir": "./dist",          // Pasta de saída para os arquivos compilados
    "rootDir": "./src",          // Pasta raiz dos seus arquivos .ts
    "strict": true,             
    "esModuleInterop": true,     
    "skipLibCheck": true,        
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,   
    "moduleResolution": "node",  
    // "types": ["node"]
  },
  "include": [
    "src/**/*"                   // Inclui todos os arquivos TypeScript na pasta src
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"               // Exclui arquivos de teste se tiver um padrão diferente
  ]
}